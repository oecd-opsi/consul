footer_links = [
  {
    "title": "Submit a case study",
    "href": "https://oecd-opsi.org/submit-a-case-study/"
  },
  {
    "title": "Our partners",
    "href": "https://oecd-opsi.org/about-observatory-of-public-sector-innovation/about-our-partners/"
  },
  {
    "title": "Privacy Policy",
    "href": "https://oecd-opsi.org/privacy-policy/"
  },
  {
    "title": "Terms of Service",
    "href": "https://oecd-opsi.org/terms-of-service/"
  },
  {
    "title": t("layouts.footer.accessibility"),
    "href": page_path("accessibility")
  },
  {
    "title": "Contact us",
    "href": "https://oecd-opsi.org/contact-us/"
  },
  {
    "title": "Government After Shock Event",
    "href": "https://oecd-opsi.org/government-after-shock/"
  }
]

footer_social = [
  {
    href: 'https://twitter.com/OPSIgov',
    attrs: { title: 'OPSI on Twitter', target: '_blank' },
    icon: '<span class="icon-twitter"></span>',
    title: '@OPSIgov',
  },
  {
    href: 'https://www.facebook.com/theOECD/',
    attrs: { target: '_blank' },
    icon: '<span class="icon-facebook"></span>',
    title: 'OPSI on Facebook',
  },
  {
    href: 'https://www.linkedin.com/company/165285/',
    attrs: { target: '_blank' },
    icon: '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"></path></svg>',
    title: 'OPSI on LinkedIn',
  },
