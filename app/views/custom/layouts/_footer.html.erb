%>

<footer class="c-footer">
  <div class="row">
    <div class="column large-4 large-push-4 c-footer__col-nav">
      <div class="row">
        <div class="column small-12 medium-6 hide-for-medium">
          newsletter
        </div>

        <div class="column small-10 medium-6">
          <ul class="c-footer__menu-list">
            <% footer_links.each do |item| %>
              <li>
                <% a_attrs = item[:href].blank? ? { href: 'javascript:void(0)' } : { href: item[:href] } %>
                <%= content_tag :a, { class: 'c-footer__menu-link' }.merge(a_attrs).merge(item[:attrs] || {}) do %>
                  <%= item[:title] %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="column small-2  medium-6">
          <ul class="c-footer__social-list">
            <% footer_social.each do |item| %>
              <li>
                <%= content_tag :a, { class: 'c-footer__social-link', href: item[:href] }.merge(item[:attrs] || {}) do %>
                  <div class="c-footer__social-icon-wrapper" aria-hidden="true">
                    <%= raw item[:icon] %>
                  </div>
                  <div class="c-footer__social-title">
                    <%= item[:title] %>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="hide-for-small-only column medium-6 large-12">
          newsletter
        </div>
      </div>
    </div>

    <div class="column medium-6 large-4 large-pull-4 c-footer__col-logo-copy">
      <div class="margin-bottom">
        <a href="https://www.oecd.org/" title="OECD" class="blank" target="_blank">
          <%= image_tag(image_path_for("oecd-logo.png"), class: nil, alt: "OECD", width: 238, height: 74) %>
        </a>
      </div>

      <div class="margin-bottom">
        <p class="c-footer__copy">© Organisation for Economic Cooperation and Development</p>
        <address class="c-footer__address">
          2 rue André Pascal, 75775 Paris CEDEX 16, France
        </address>
      </div>
    </div>

    <div class="column medium-6 large-4 c-footer__col-eu-license">
      <a
        href="https://ec.europa.eu/programmes/horizon2020/"
        title="Horizon 2020 Framework Programme of the European Union"
        class="clearfix margin-bottom c-footer__eu-link"
        target="_blank"
      >
        <%= image_tag(image_path_for("eu-flag.png"), class: "c-footer__eu-flag", alt: "European Union flag", width: 80, height: 54) %>
        <p class="c-footer__eu-paragraph">
          Co-funded by the Horizon 2020 Framework Programme of the European Union
        </p>
      </a>
      <div class="c-footer__cc-wrapper">
        <a
          href="https://creativecommons.org/licenses/by-sa/3.0/igo/"
          title="Creative Commons Attribution"
          target="_blank"
          class="c-footer__cc-link"
        >
          This work is licensed under a Creative Commons Attribution - ShareAlike 3.0 IGO (CC BY-SA 3.0 IGO)
        </a>
      </div>
    </div>
  </div>
</footer>
