<% provide :title do %>
  <%= t("oecd_representative.header.title") %> - <%= t("oecd_representative.menu.legislation") %> - <%= @process.title %> - <%= t("oecd_representative.legislation.draft_versions.index.title") %> - <%= @draft_version.title %>
<% end %>

<div class="legislation-draft-versions-edit legislation-draft-versions-form">
  <div class="small-12 column">
    <%= back_link_to oecd_representative_legislation_process_draft_versions_path(@process),
                     t("oecd_representative.legislation.draft_versions.edit.back") %>

    <h2><%= @process.title %></h2>

    <%= render "oecd_representative/legislation/processes/subnav", process: @process, active: "draft_versions" %>

    <div class="small-12 column">
      <div class="callout warning" style="display: none;">
        <%= t("oecd_representative.legislation.draft_versions.edit.warning") %>
      </div>
    </div>

    <div class="small-12 column">
      <h3 class="inline-block"><%= @draft_version.title %></h3>

      <div class="float-right">
        <%= link_to t("oecd_representative.legislation.draft_versions.index.delete"),
                    oecd_representative_legislation_process_draft_version_path(@process, @draft_version),
                    method: :delete,
                    class: "button hollow alert" %>
      </div>
    </div>

    <%= render "form", url: oecd_representative_legislation_process_draft_version_path(@process, @draft_version) %>
  </div>
</div>
