<% provide :title do %>
  <%= t("oecd_representative.header.title") %> - <%= t("oecd_representative.menu.legislation") %> - <%= @process.title %>
<% end %>

<div class="legislation-process-edit">
  <%= back_link_to oecd_representative_legislation_processes_path, t("oecd_representative.legislation.processes.edit.back") %>

  <h2><%= @process.title %></h2>

  <p>
    <%= t("oecd_representative.legislation.processes.edit.status_indicator_html",
          status: t("oecd_representative.legislation.processes.statuses.#{@process.status_indicator_key}"),
          link: link_to(legislation_process_url(@process), legislation_process_path(@process), target: '_blank'))
    %>

    <% if @process.not_started_yet? || @process.in_draft_phase? %>
      <%= t("oecd_representative.legislation.processes.edit.draft_additional_info") %>
    <% end %>
  </p>

  <%= render "subnav", process: @process, active: "info" %>

  <%= render "form" %>
</div>
