<% provide :title do %>
  <%= t("oecd_representative.header.title") %> - <%= t("oecd_representative.menu.legislation") %> - <%= t("oecd_representative.legislation.processes.index.filters.#{@current_filter}") %>
<% end %>

<h2 class="inline-block"><%= t("oecd_representative.legislation.processes.index.title") %></h2>

<%= link_to t("oecd_representative.legislation.processes.index.create"), new_oecd_representative_legislation_process_path,
            class: "button float-right" %>

<%= render "shared/filter_subnav", i18n_namespace: "oecd_representative.legislation.processes.index" %>

<% if @processes.any? %>
  <h3><%= page_entries_info @processes %></h3>

  <table class="stack">
    <thead>
      <tr>
        <th><%= t("oecd_representative.legislation.processes.process.title") %></th>
        <th><%= t("oecd_representative.legislation.processes.process.status") %></th>
        <th class="text-center"><%= t("oecd_representative.legislation.processes.process.start_date") %></th>
        <th class="text-center"><%= t("oecd_representative.legislation.processes.process.end_date") %></th>
        <th class="text-center"><%= t("oecd_representative.legislation.processes.process.comments") %></th>
        <th><%= t("oecd_representative.actions.actions") %></th>
      </tr>
    </thead>

    <tbody>
      <% @processes.each do |process| %>
        <tr id="<%= dom_id(process) %>">
          <td class="small-12 medium-6 large-4">
            <%= link_to process.title, edit_oecd_representative_legislation_process_path(process) %>
          </td>
          <td><%= t("oecd_representative.legislation.processes.process.status_#{process.status}") %></td>
          <td class="text-center"><%= I18n.l process.start_date %></td>
          <td class="text-center"><%= I18n.l process.end_date %></td>
          <td class="text-center"><%= process.total_comments %></td>
          <td>
            <%= link_to t("oecd_representative.legislation.processes.index.delete"), oecd_representative_legislation_process_path(process),
                        method: :delete,
                        class: "button hollow alert expanded" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @processes %>
<% else %>
  <div class="callout primary">
    <%= page_entries_info @processes %>
  </div>
<% end %>
