<% provide :title do %>
  <%= t("oecd_representative.header.title") %> - <%= t("oecd_representative.menu.legislation") %> - <%= @process.title %> - <%= t("oecd_representative.legislation.questions.index.title") %> - <%= @question.title %>
<% end %>

<div class="legislation-questions-edit legislation-questions-form">
  <div class="small-12 column">
    <%= back_link_to oecd_representative_legislation_process_questions_path(@process), t("oecd_representative.legislation.questions.edit.back") %>

    <h2><%= @process.title %></h2>

    <%= render "oecd_representative/legislation/processes/subnav", process: @process, active: "questions" %>

    <div class="row">
      <div class="small-12 column">
        <h3 class="inline-block"><%= t("oecd_representative.legislation.questions.edit.title", question_title: @question.title) %></h3>

        <div class="float-right">
          <%= link_to t("oecd_representative.legislation.questions.index.delete"), oecd_representative_legislation_process_question_path(@process, @question),
                      method: :delete,
                      class: "button hollow alert" %>
        </div>
      </div>
    </div>

    <%= render "form", url: oecd_representative_legislation_process_question_path(@process, @question) %>
  </div>
</div>
