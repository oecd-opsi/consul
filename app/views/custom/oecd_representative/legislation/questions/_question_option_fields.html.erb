<div class="nested-fields">
  <div class="field">
    <div class="small-12 medium-9 column">
      <%= f.translatable_fields do |translations_form| %>
        <%= translations_form.text_field :value,
                                         placeholder: t("oecd_representative.legislation.questions.form.value_placeholder"),
                                         label: false %>
      <% end %>
    </div>

    <div class="small-12 medium-3 column">
      <%= link_to_remove_association t("oecd_representative.legislation.questions.question_option_fields.remove_option"), f, class: "delete" %>
    </div>
  </div>
</div>
