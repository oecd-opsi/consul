<% provide(:title) do %>
  <%= t("oecd_representative.header.title") %> - <%= t("oecd_representative.comments.index.title") %>
<% end %>

<h2><%= t("oecd_representative.comments.index.title") %></h2>

<% if @comments.any? %>

  <h3 class="inline-block"><%= page_entries_info @comments %></h3>

  <table>
    <thead>
      <tr>
        <th class="text-center"><%= t("oecd_representative.comments.index.id") %></th>
        <th><%= t("oecd_representative.comments.index.content") %></th>
        <th><%= t("oecd_representative.comments.index.author") %></th>
        <th><%= t("oecd_representative.comments.index.commentable_type") %></th>
        <th><%= t("oecd_representative.comments.index.table_link") %></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr id="<%= dom_id(comment) %>" class="debates">
          <td class="text-center"><%= comment.id %></td>
          <td><%= comment.body %></td>
          <td><%= comment.author.username %></td>
          <td><%= comment.commentable_type.constantize.model_name.human %></td>
          <td>
            <% if comment.commentable.hidden? %>
              (<%= t("oecd_representative.comments.index.hidden_#{comment.commentable_type.downcase}") %>: <%= comment.commentable.title %>)
            <% else %>
              <%= link_to comment.commentable.title, commentable_path(comment) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @comments %>
<% else %>
  <div class="callout primary margin">
    <%= t("oecd_representative.comments.index.no_comments") %>
  </div>
<% end %>
